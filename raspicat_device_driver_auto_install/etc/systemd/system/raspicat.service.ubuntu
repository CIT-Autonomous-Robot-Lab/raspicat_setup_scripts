[Unit]
Description=raspimouse driver installer
After=
Requires=

[Service]
User=ubuntu
ExecStart=/bin/bash -c "source /home/ubuntu/raspicat_ws/devel/setup.bash && $(rospack find raspicat_device_driver_auto_install)/setup_raspicat.sh"
Type=simple
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
